<mtapp:setting
    id="<mt:var name="field">_linked_blog_id"
    label="Blog"
    content_class="field-content-text">
    <select name="<mt:var name="field">_linked_blog_id"> id="<mt:var name="field">_linked_blog_id">
    <option value="">Select</option>
    <mt:loop name="linked_blog_loop">
    <option value="<mt:var name="value">"<mt:if name="selected"> selected="selected"</mt:if>><mt:var name="label"></option>
    </mt:loop>
    </select>
</mtapp:setting>

<mtapp:setting
    id="<mt:var name="field">_category_ids"
    label="Category IDs"
    content_class="field-content-text">
    <input type="text" name="<mt:var name="field">_category_ids" value="<mt:var name="category_ids">" />
</mtapp:setting>

<mtapp:setting
    id="<mt:var name="field">_subcats"
    label="Include Subcategories"
    content_class="field-content-text">
    <input type="checkbox" name="<mt:var name="field">_subcats"<mt:if name="subcats"> checked="checked"</mt:if> />
</mtapp:setting>
